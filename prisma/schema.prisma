// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String @db.VarChar(20)
  lastName String @db.VarChar(50)
  username String @unique @db.VarChar(100)
  password String @db.VarChar(100)
  email String @unique @db.VarChar(100)
  token String? @db.VarChar(100)
  roles String? @db.VarChar(10)

  article Article[]
  notification Notification[]
  @@map("users")
}

model Category {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)

  article Article[]
  @@map("category")
}

model Article {
  id Int @id @default(autoincrement())
  title String @db.VarChar(255)
  content String @db.Text
  description String @db.Text
  created_at DateTime
  modified_at DateTime
  user_id User @relation(fields: [id], references: [id], map: "user_id_fkey")
  category_id Category @relation(fields: [id], references: [id], map: "category_id_fkey")

  @@map("article")
}


model Notification {
  id Int @id @default(autoincrement())
  user_id User @relation(fields: [id], references: [id])
  content String @db.VarChar(255)
  status Int @default(0)

  @@map("notification")
}



